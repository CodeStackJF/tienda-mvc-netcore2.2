@model Clientes
<form asp-action="Guardar" asp-controller="Clientes" method="post">
    <div class="row">
        <input type="hidden" asp-for="IdCliente">
        <div class="form-group col">
            <label>Nombres</label>
            <input type="text" asp-for="Nombre" class="form-control">
            <span asp-validation-for="Nombre"></span>
        </div>    
        <div class="form-group col">
            <label>DUI</label>
            <input type="text" asp-for="Dui" class="form-control">
            <span asp-validation-for="Dui"></span>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="form-group col">
            <label>NIT</label>
            <input type="text" asp-for="Nit" class="form-control">
            <span asp-validation-for="Nit"></span>
         </div>
         <div class="form-group col">
            <label>Correo</label>
            <input type="text" asp-for="Correo" class="form-control">
            <span asp-validation-for="Correo"></span>
         </div>
    </div>
    <div class="row">
        <button type="submit" class="btn btn-primary">@(Model.IdCliente > 0 ?"ACTUALIZAR":"GUARDAR")</button>
    </div>
</form>